<div class="max-w-4xl mx-auto p-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold">All Recordings</h1>
    <%= link_to "← Back to Recorder", root_path, class: "text-blue-600 hover:underline" %>
  </div>

  <% if @recordings.any? %>
    <div class="space-y-4">
      <% @recordings.each do |recording| %>
        <div class="bg-white shadow rounded-lg p-4 flex items-center justify-between">
          <div class="flex-1">
            <div class="flex items-center gap-4">
              <audio controls class="flex-1">
                <%= tag.source src: url_for(recording.file), type: recording.file.content_type %>
                Your browser does not support the audio element.
              </audio>
              <div class="text-sm text-gray-600">
                <%= (recording.duration / 1000.0).round(1) %>s
              </div>
            </div>
            <div class="text-xs text-gray-500 mt-2">
              Recorded <%= time_ago_in_words(recording.created_at) %> ago
            </div>
          </div>
          <div class="ml-4">
            <%= button_to "Delete", recording_path(recording), method: :delete,
                data: { turbo_confirm: "Are you sure?" },
                class: "text-red-600 hover:text-red-800 text-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <p class="text-gray-600 mb-4">No recordings yet.</p>
      <%= link_to "Create your first recording", root_path, class: "text-blue-600 hover:underline" %>
    </div>
  <% end %>
</div>
